<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="@drawable/sp_ract_root"
        android:layout_centerInParent="true"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jadwal"
            android:layout_marginTop="20dp"
            android:text="Jadwal Shalat"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

 <TextView
            android:id="@+id/subuh"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/jadwal"
            android:text="Subuh"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/subuh_value"
            android:layout_below="@+id/subuh"
            android:layout_marginLeft="5dp"
            android:text="value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
       <TextView
            android:id="@+id/dhuhur"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/subuh_value"
            android:text="Dhuhur"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dhuhur_value"
            android:layout_below="@+id/dhuhur"
            android:layout_marginLeft="5dp"
            android:text="value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ashar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/dhuhur_value"
            android:text="Ashar"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ashar_value"
            android:layout_below="@+id/ashar"
            android:layout_marginLeft="5dp"
            android:text="value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/maghrib"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/ashar_value"
            android:text="Maghrib"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/maghrib_value"
            android:layout_below="@+id/maghrib"
            android:layout_marginLeft="5dp"
            android:text="value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/isha"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/maghrib_value"
            android:text="Isha"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/isha_value"
            android:layout_below="@+id/isha"
            android:text="value"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>